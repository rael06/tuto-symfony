{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion !</h1>
    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input type="text" placeholder="Votre nom d'utilisateur..." class="form-control" name="_username" required>
        </div>
        <div class="form-group">
            <input type="password" placeholder="Votre mot de passe..." class="form-control" name="_password" required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion !</button>
        </div>
    </form>
{% endblock %}